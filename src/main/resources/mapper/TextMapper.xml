        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.hastur23.blogServer.mapper.TextMapper">
    <select id="getBlogText" parameterType="int" resultType="MainText">
        select * from maintext where blogId = #{blogId}
